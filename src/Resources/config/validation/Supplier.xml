<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="BlackOwl\SyliusSupplierPlugin\Model\Supplier">

        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">code</option>
            <option name="message">blackowl_sylius_supplier.supplier.code.unique</option>
            <option name="groups">blackowl_sylius_supplier</option>
        </constraint>
        <property name="code">
            <constraint name="NotBlank">
                <option name="message">blackowl_sylius_supplier.supplier.code.not_blank</option>
                <option name="groups">blackowl_sylius_supplier</option>
            </constraint>
            <constraint name="Length">
                <option name="max">255</option>
                <option name="maxMessage">blackowl_sylius_supplier.supplier.code.max_length</option>
                <option name="groups">blackowl_sylius_supplier</option>
            </constraint>
            <constraint name="Regex">
                <option name="message">blackowl_sylius_supplier.supplier.code.regex</option>
                <option name="pattern">/^[\w-]*$/</option>
                <option name="groups">blackowl_sylius_supplier</option>
            </constraint>
        </property>

        <property name="name">
            <constraint name="NotBlank">
                <option name="message">blackowl_sylius_supplier.supplier.name.not_blank</option>
                <option name="groups">blackowl_sylius_supplier</option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="max">255</option>
                <option name="minMessage">blackowl_sylius_supplier.supplier.name.min_length</option>
                <option name="maxMessage">blackowl_sylius_supplier.supplier.name.max_length</option>
                <option name="groups">blackowl_sylius_supplier</option>
            </constraint>
        </property>

        
    </class>

</constraint-mapping>
